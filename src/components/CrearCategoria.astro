---
import { Astro } from 'astro/components';

const crearCategoria = async (event) => {
  event.preventDefault();
  const nombre = event.target.elements.nombre.value;
  const color = event.target.elements.color.value;
  const respuesta = await fetch('http://localhost:3001/categorias', {
    method: 'POST',
    headers: { 'Content-Type': 'application/json' },
    body: JSON.stringify({ nombre, color }),
  });
  const categoria = await respuesta.json();
  console.log(categoria);
}
---

<form onSubmit={crearCategoria}>
  <input type="text" name="nombre" placeholder="Nombre de la categoría" />
  <input type="color" name="color" placeholder="Color de la categoría" />
  <button type="submit">Crear categoría</button>
</form>